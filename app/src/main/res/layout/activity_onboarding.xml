<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.onBoarding.OnBoarding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/skip_btn"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:textSize="14dp"
            android:background="@drawable/onbording_btn"
            android:text="skip" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.viewpager2.widget.ViewPager2>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:id="@+id/first_btn"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/ob_unselected_radio"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/second_btn"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/ob_unselected_radio"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/third_btn"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/ob_unselected_radio" />

                <Button
                    android:id="@+id/fourth_btn"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/ob_unselected_radio" />

<!--                &lt;!&ndash;Selected&ndash;&gt;-->
<!--                <Button-->
<!--                    android:layout_width="30dp"-->
<!--                    android:layout_height="10dp"-->
<!--                    android:layout_marginHorizontal="5dp"-->
<!--                    android:background="@drawable/ob_selected_radio"-->
<!--                    android:layout_gravity="center"/>-->
            </RadioGroup>

            <ImageView
                android:id="@+id/next_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/obbtn" />
        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>